<%= f.hidden_field :entity_fieldable_type, value: 'Entity' %>

<div class="form-group">
  <%= f.label :label %>
  <%= f.text_field :label, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :entity_fieldable_id %>
  <%= f.select :entity_fieldable_id,
               options_for_select(@entities.map { |entity| [entity.name, entity.id] }, selected: f.object.entity_fieldable_id),
               { include_blank: false }, class: 'form-control' %>
</div>

<div class="actions">
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
</div>