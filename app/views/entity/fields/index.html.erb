<div class="container">
  <h1>Entity Fields</h1>
  <%= link_to 'New Entity Field', new_entity_field_path, class: 'btn btn-primary' %>
  <table class="table">
    <thead>
    <tr>
      <th>Label</th>
      <th>Entity</th>
    </tr>
    </thead>
    <tbody>
    <% @entity_fields.each do |entity_field| %>
      <tr>
        <td><%= entity_field.label %></td>
        <td><%= link_to entity_field.entity_fieldable.name, edit_entity_path(entity_field.entity_fieldable.id) %></td>
        <td>
          <%= link_to 'Edit', edit_entity_field_path(entity_field.id) %>
          <%= link_to 'Delete', entity_field_path(entity_field.id), method: :delete, class: 'mx-3' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
