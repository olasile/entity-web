<h1>Sign In</h1>

<%= form_tag auth_index_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag "Sign In", class: 'btn btn-primary' %>
  </div>
<% end %>
