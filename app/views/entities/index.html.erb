<div class="container">
  <h1>Entities</h1>
  <%= link_to 'New Entity', new_entity_path, class: 'btn btn-primary' %>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
    </tr>
    </thead>
    <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.name %></td>
        <td>
          <%= link_to 'Edit', edit_entity_path(entity.id) %>
          <%= link_to 'Delete', entity_path(entity.id), method: :delete, class: 'mx-3' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
